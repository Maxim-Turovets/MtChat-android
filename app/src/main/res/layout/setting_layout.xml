<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:id="@+id/settings">


    <RelativeLayout
        android:id="@+id/settingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--SETTING IMAGE-->
        <RelativeLayout
            android:id="@+id/settingImage"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/icons8_setting_512" />
        </RelativeLayout>


        <!--MEDIA-->
        <RelativeLayout
            android:id="@+id/settingMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settingImage"
            android:layout_marginTop="15dp"
            android:background="@drawable/setting_section_drawable">
            <!--TEXT-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Media"
                android:textColor="#0D26A3"
                android:textSize="15sp"
                android:textStyle="bold" />
            <!--on/off-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:text="off/on"
                android:textColor="#0D26A3"
                android:textSize="15sp"
                android:textStyle="italic" />
            <!--1 ELEMENT-->
            <RelativeLayout
                android:id="@+id/settingSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:text="Sound"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textColor="#3F51B5"
                    android:textSize="18sp" />

                <Switch
                    android:id="@+id/settingSoundSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp" />


            </RelativeLayout>

            <!--2 ELEMENT-->
            <RelativeLayout
                android:id="@+id/settingVibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settingSound">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:text="Vibration "
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textColor="#3F51B5"
                    android:textSize="18sp" />

                <Switch
                    android:id="@+id/settingVibrationSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp" />


            </RelativeLayout>
        </RelativeLayout>

        <!--DATA-->
        <RelativeLayout
            android:id="@+id/settingData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settingMedia"
            android:layout_marginTop="15dp"
            android:background="@drawable/setting_section_drawable">

            <!--TEXT-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:text="Data"
                android:textColor="#0D26A3"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!--1 ELEMENT-->
            <RelativeLayout
                android:id="@+id/settingRememberMyData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:text="remember my data"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textColor="#3F51B5"
                    android:textSize="18sp" />

                <Switch
                    android:id="@+id/settingRememberNyDataSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp" />


            </RelativeLayout>

            <!--2 ELEMENT-->
            <RelativeLayout
                android:id="@+id/settingRememberInterlocutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/settingRememberMyData">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:text="remember interlocutor"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textColor="#3F51B5"
                    android:textSize="18sp" />

                <Switch
                    android:id="@+id/settingRememberInterlocutorSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp" />


            </RelativeLayout>

        </RelativeLayout>

        <!--CHAT-->
        <RelativeLayout
            android:id="@+id/settingChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/settingData"
            android:background="@drawable/setting_section_drawable">

            <!--TEXT-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:text="Chat view"
                android:textColor="#0D26A3"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!--1 ELEMENT-->
            <RelativeLayout
                android:id="@+id/settingGoToChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="remember my details and go to chat immediately"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textColor="#3F51B5"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/settingGoToChatSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp" />


            </RelativeLayout>



        </RelativeLayout>


    </RelativeLayout>









</android.support.constraint.ConstraintLayout>